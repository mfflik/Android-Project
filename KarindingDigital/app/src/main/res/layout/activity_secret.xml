<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="mff.karindingv1.Secret"
    android:gravity="center"
    android:weightSum="1"
    android:background="@color/bglatar">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="MENU"
        android:textAlignment="center"
        android:textColor="@color/colorputih"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Choose Your Karinding"
        android:textAlignment="center"
        android:textColor="@color/colorputih"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_gogon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/k2gon"
                android:onClick="goTogogon" />

            <Button
                android:id="@+id/btn_tongeret"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/k1tong"
                android:onClick="goTotongeret"
                android:layout_margin="5dp"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/btn_iring"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/k4iring"
                android:onClick="goToiring"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/btn_rereogan"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/k3rereo"
                android:onClick="goTorereogan" />
        </TableRow>

    </TableLayout>

</LinearLayout>
