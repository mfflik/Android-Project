<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="mff.karindingv1.iring"  android:background="@color/bglatar">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Karinding Iring-Iringan"
        android:textAlignment="center"
        android:textColor="@color/colorputih"
        android:textSize="25sp"
        android:paddingTop="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="322dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.33">

        <Button
            android:id="@+id/low"
            android:layout_width="125dp"
            android:layout_height="300dp"
            android:background="@drawable/low"
            android:layout_marginRight="5dp"
            android:onClick="play_low"
            tools:layout_editor_absoluteX="181dp"
            tools:layout_editor_absoluteY="50dp" />

        <Button
            android:id="@+id/high"
            android:layout_width="125dp"
            android:layout_height="300dp"
            android:background="@drawable/high"
            android:onClick="play_high"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="42dp" />
    </LinearLayout>

    <Button
        android:id="@+id/back"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:onClick="back"
        android:background="@color/colorputih"
        android:text="Back" />

</LinearLayout>
